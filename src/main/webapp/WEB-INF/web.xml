<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>in.upes.projectmanagement.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>in.upes.projectmanagement.logoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>inviteServlet</servlet-name>
        <servlet-class>in.upes.projectmanagement.inviteServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>searchStudent</servlet-name>
        <servlet-class>in.upes.projectmanagement.searchStudent</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>handleInvite</servlet-name>
        <servlet-class>in.upes.projectmanagement.handleInvite</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>fetchInvite</servlet-name>
        <servlet-class>in.upes.projectmanagement.fetchInvite</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>handleInvite</servlet-name>
        <url-pattern>/handleInvite</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>fetchInvite</servlet-name>
        <url-pattern>/fetchInvite</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>inviteServlet</servlet-name>
        <url-pattern>/inviteServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>searchStudent</servlet-name>
        <url-pattern>/searchStudent</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    

</web-app>

